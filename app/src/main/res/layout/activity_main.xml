<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a4a4a4"
        android:tag="@string/status_bar"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/container_Actionbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/statusBarBackground"
        android:background="#4F536B" />

    <FrameLayout
        android:id="@+id/container_Mainfragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/container_Actionbar" />

    <FrameLayout
        android:id="@+id/container_Subfragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/container_Actionbar" />

    <View
        android:id="@+id/vfader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c7000000"
        android:visibility="gone" />


    <FrameLayout
        android:id="@+id/container_Menufragment"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/container_Actionbar" />

</RelativeLayout>